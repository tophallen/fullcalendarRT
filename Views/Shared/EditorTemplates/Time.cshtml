@model Nullable<System.DateTime>
@if ( Model.HasValue ) {
   @Html.TextBox( "" , String.Format( "{0:HH:mm}" , Model.Value ) , new  { @class = "textbox" , @style = "width:55px;" } )
}
else {
   @Html.TextBox( "" , String.Format( "{0:HH:mm}" , DateTime.Now ) , new { @class = "textbox" , @style = "width:55px;" } )
}

